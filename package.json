{
  "name": "bentewee-app",
  "version": "1.0.0",
  "description": "A bentewee app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "release": "electron-builder -p never"
  },
  "repository": "https://github.com/bentewee/bentewee-app",
  "keywords": [
    "bentewee"
  ],
  "author": {
    "name": "bentewee",
    "email": "bentewee@bentewee.com",
    "url": "https://www.bentewee.com/"
  },
  "build": {
    "appId": "com.bentewee.bentewee-app",
    "productName": "bentewee",
    "artifactName": "${productName}.${ext}",
    "copyright": "Copyright (c) 2020 bentewee",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "extraFiles": [
      {
        "from": "plugins",
        "to": "plugins",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "category": "public.app-category.games",
      "icon": "assets/icon.png",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz",
        "AppImage"
      ],
      "desktop": {
        "Categories": "Game"
      }
    },
    "nsis": {
      "installerIcon": "assets/icon.ico",
      "installerSidebar": "assets/background.bmp",
      "artifactName": "${productName}-setup.${ext}",
      "oneClick": false,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "license": "LICENSE.md",
      "language": "1033"
    },
    "dmg": {
      "icon": "assets/icon.png",
      "background": "assets/background.png",
      "title": "${productName}-setup",
      "artifactName": "${productName}.${ext}",
      "window": {
        "height": 380,
        "width": 540
      }
    }
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.2.12",
    "electron-builder": "^22.9.1"
  }
}
