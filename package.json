{
  "name": "bentewee",
  "homepage": "https://www.bentewee.com/",
  "version": "1.0.0",
  "description": "A bentewee app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -p never",
    "release": "electron-builder"
  },
  "repository": "https://github.com/bentewee/bentewee-app",
  "keywords": [
    "bentewee"
  ],
  "author": {
    "name": "bentewee",
    "email": "bentewee@bentewee.com",
    "url": "https://www.bentewee.com/"
  },
  "build": {
    "appId": "com.bentewee.bentewee-app",
    "productName": "bentewee",
    "artifactName": "${productName}.${ext}",
    "copyright": "Copyright (c) 2020 bentewee",
    "asar": true,
    "protocols": [
      {
        "name": "bentewee",
        "schemes": [
          "bentewee"
        ]
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "build/icon.*"
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "plugins/PepperFlashPlayer.plugin",
          "to": "plugins/PepperFlashPlayer.plugin",
          "filter": ["**/*"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "plugins",
          "to": "plugins",
          "filter": ["*.so"]
        }
      ],
      "desktop": {
        "Categories": "Game"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "plugins",
          "to": "plugins",
          "filter": ["*.dll"]
        }
      ]
    },
    "dmg": {
      "icon": "build/icon-setup.icns",
      "background": "build/background.png",
      "title": "${productName}-setup",
      "artifactName": "${productName}.${ext}",
      "window": {
        "height": 380,
        "width": 540
      }
    },
    "nsis": {
      "installerIcon": "build/icon-setup.ico",
      "installerSidebar": "build/installerSidebar.bmp",
      "artifactName": "${productName}-setup.${ext}",
      "oneClick": false,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "license": "LICENSE.md",
      "language": "1033"
    },
    "publish": {
      "provider": "spaces",
      "name": "bentewee",
      "region": "nyc3",
      "path": "app/",
      "acl": "public-read"
    }
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^4.2.12",
    "electron-builder": "^22.9.1"
  }
}
